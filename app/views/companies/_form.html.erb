<%= form_for(@company) do |f| %>
	<%= render :partial=>'others/form_errors', :locals=>{:object=>f.object}  %>

			<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</div>
			<div class="field">
			<%= f.label :description %><br />
			<%= f.text_area :description, :size => "60x5" %>
		</div>
			<div class="field">
			<%= f.label :address %><br />
			<%= f.text_area :address, :size => "20x5" %>
		</div>
			<div class="field">
			<%= f.label :idnumber %><br />
			<%= f.text_field :idnumber %>
		</div>
		
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
