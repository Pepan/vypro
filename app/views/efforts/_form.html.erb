<%= form_for [@effort.task.project, @effort.task, @effort] do |f| %>
	<%= render :partial=>'others/form_errors', :locals=>{:object=>f.object}  %>

<!--
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name, :size => 80 %>
	</div>
-->
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description, :size => "80x3" %>
	</div>
	<div class="field">
		<%= f.label :begin_at %><br />
		<%= f.time_select :begin_at %>
	</div>
	<div class="field">
		<%= f.label :end_at %><br />
		<%= f.time_select :end_at %>
	</div>
	<div class="field">
		<%= f.label :progress %><br />
		<%= f.range_field :progress, :min=>0, :max=>100, :step=>10 %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
